<h1>Your to-do list</h1>

<p><%= link_to "New task", new_task_path %></p>

<ul>
  <% @tasks.each do |task| %>
    <li>
      [<%= task.completed ? "X" : " " %>] <%= link_to task.name, task_path(task) %> (<%= link_to "Edit", edit_task_path(task) %> Â· <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>)
    </li>
  <% end %>
</ul>
